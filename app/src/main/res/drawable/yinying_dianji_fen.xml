<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--默认情况下是一个带圆角,白色背景,蓝色虚线边框的矩形-->
    <item android:state_window_focused="false">
            <shape android:shape="rectangle">
                <!--填充颜色为白色-->
                <solid android:color="@color/detail_buy_color" />
                <!--描边，设置描边为虚线，其中android:dashWidth表示'-'这样一个横线的宽度，android:dashGap表示之间隔开的距离-->
                <!--<stroke android:width="2dp" android:color="#000000"/>-->
                <!--<padding android:top="0dp"
                    android:bottom="5dp"
                    android:left="0dp"
                    android:right="5dp"/>-->
                <!-- 圆角 -->
                <corners android:radius="15dp" />
                <!-- from top to bottom -->
            </shape>
    </item>
    <!--单击时候是一个带圆角,白色背景,绿色虚线边框的矩形-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--填充颜色-->
            <solid android:color="@color/drawer_about_coclor" />
            <!--描边-->
            <!--<stroke android:width="2dp" android:color="#000000"  android:dashWidth="10dp" />-->
            <!-- 圆角 -->
            <corners android:radius="15dp" />
            <!-- from top to bottom -->
            <!--<gradient
                android:angle="90"
                android:centerColor="#bbbbbb"
                android:endColor="#d5d5d5"
                android:startColor="#a9a09d" />-->
        </shape>
    </item>
</selector>