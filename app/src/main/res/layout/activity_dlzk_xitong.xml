<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zhuti2"
    tools:context=".dlzk.activity.DlzkXitongActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/xitongshezhi"
            android:theme="@style/textSize_25_b" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/llDlzkXitongYiSjsz"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/btn_lv_yinying_hei"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/shijianshezhi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:theme="@style/textSize_20"
                android:text="@string/shijianshezhi"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDlzkXitongYiTxcs"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:background="@drawable/btn_lv_yinying_hei"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bluetooth"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:theme="@style/textSize_20"
                android:text="@string/tongxuncanshu"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDlzkXitongYiTssz"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:background="@drawable/btn_lv_yinying_hei"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/tiaoshishezhi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:theme="@style/textSize_20"
                android:text="@string/tiaoshishezhi"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvDlzkXitongYiFanhui"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:theme="@style/textSize_20_b"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/btn_lv_yinying_hei"
                android:text="@string/fanhui"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>